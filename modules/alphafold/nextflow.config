process {
    withName: ALPHAFOLD {
        cpus   = 2
        time   = { meta.size() * 1.h * task.attempt }
        memory = { 16.GB * task.attempt }

        publishDir =
            [
                [
                    path: { "${params.OUT}/${workflow.runName}/predictions/${meta*.value.join('.')}" },
                    saveAs: { path -> path.split('/').last() }
                ]
            ]
    }
}

process {
    withName: MSA {
        cpus   = 4
        time   = { 1.h * task.attempt }
        memory = 64.GB

        publishDir =
            [
                [
                    path: { "${params.OUT}/msa/${record.id}" },
                    saveAs: { path -> path.split('/').last() }
                ]
            ]
    }
}
