process {
    withName: MSA {
        cpus   = 8
        time   = { 1.h  * task.attempt }
        memory = { 8.GB * task.attempt }

        publishDir =
            [
                [
                    path: { "${params.OUT}/msa/${meta.id}" },
                    mode: "copy"
                ]
            ]
    }

    withName: INFERENCE {
        cpus   = 2
        time   = { 2.h   * task.attempt  }
        memory = { 12.GB * task.attempt }

        publishDir =
            [
                [
                    path: { "${params.OUT}/${workflow.runName}/predictions/${meta*.value.join('.')}" },
                    mode: "copy"
                ]
            ]
    }
}
