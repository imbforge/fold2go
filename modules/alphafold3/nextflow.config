process {
    withName: 'FOLD2GO:ALPHAFOLD3:MSA' {
        cpus   = 8
        time   = { 1.h  * task.attempt * ( meta.id instanceof List ? meta.id.size() : 1 ) }
        memory = { 8.GB * task.attempt }

        publishDir =
            [
                [
                    path: { "${params.OUT}/${workflow.runName}/msa" },
                    mode: "copy"
                ]
            ]
    }

    withName: 'FOLD2GO:ALPHAFOLD3:INFERENCE' {
        cpus   = 2
        time   = { 1.h   * task.attempt }
        memory = { 32.GB * task.attempt }

        publishDir =
            [
                [
                    path: { "${params.OUT}/${workflow.runName}/predictions" },
                    saveAs: { path -> path.split('/').last() },
                    mode: "copy"
                ]
            ]
    }
}
