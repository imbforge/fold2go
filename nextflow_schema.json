{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://gitlab.rlp.net/imbforge/fold2go/-/raw/main/nextflow_schema.json",
    "title": "fold2go",
    "description": "Configure pipeline parameters",
    "type": "object",
    "defs": {
        "pipeline_options": {
            "title": "Pipeline options",
            "type": "object",
            "description": "Define fold2go pipeline parameters.",
            "properties": {
                "IN": {
                    "type": "string",
                    "format": "path",
                    "pattern": ".(fasta|fa)$",
                    "description": "Path to input fasta file(s)",
                    "default": "/fsimb/common/cicd/test-data/alphafold/chains/*.fasta",
                    "errorMessage": "File glob must match '*.fasta' or '*.fa'"
                },
                "OUT": {
                    "type": "string",
                    "format": "path",
                    "default": "${launchDir}/fold2go",
                    "description": "Path to output directory",
                    "hidden": true
                },
                "DATABASE": {
                    "type": "string",
                    "format": "path",
                    "description": "Path to AlphaFold database",
                    "default": "/mnt/storage/alphafold/v232",
                    "hidden": true
                },
                "MODEL_PRESET": {
                    "type": "string",
                    "description": "AlphaFold model preset",
                    "default": "multimer",
                    "enum": [
                        "multimer",
                        "monomer_ptm",
                        "monomer",
                        "monomer_casp14"
                    ]
                },
                "PREDICTIONS_PER_MODEL": {
                    "type": "integer",
                    "description": "Number of multimer predictions per model",
                    "default": 1
                },
                "EMAIL": {
                    "type": "string",
		            "format": "email",
                    "description": "Email address for notifications",
                    "default": "huether@imb-mainz.de",
                    "hidden": true
                },
                "PORT": {
                    "type": "integer",
                    "description": "HTTP port to run shiny application on",
                    "default": 9988,
                    "hidden": true
                }
            }
        },
        "alphafold_options": {
            "type": "object",
            "properties": {
                "title": "ALPHAFOLD",
                "type": "object",
                "description": "Parameter options for AlphaFold.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable ALPHAFOLD process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "msa_options": {
            "type": "object",
            "properties": {
                "title": "MSA",
                "type": "object",
                "description": "Parameter options for multiple sequence alignment.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable MSA process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "pymol_options": {
            "type": "object",
            "properties": {
                "title": "PYMOL",
                "type": "object",
                "description": "Parameter options for pymol metrics.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable PYMOL process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "shiny_options": {
            "type": "object",
            "properties": {
                "title": "SHINY",
                "type": "object",
                "description": "Parameter options for shiny app.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable SHINY process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/defs/pipeline_options"
        }
    ]
}
