{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://gitlab.rlp.net/imbforge/fold2go/-/raw/main/nextflow_schema.json",
    "title": "fold2go",
    "description": "Configure pipeline parameters",
    "type": "object",
    "defs": {
        "pipeline_options": {
            "title": "Pipeline options",
            "type": "object",
            "description": "Define fold2go pipeline parameters.",
            "properties": {
                "IN": {
                    "type": "string",
                    "format": "path",
                    "description": "Path to input fasta (AlphaFold2) or json (AlphaFold3) file(s)",
                    "default": "/fsimb/common/cicd/test-data/alphafold/chains/*.json"
                },
                "OUT": {
                    "type": "string",
                    "format": "path",
                    "default": "${launchDir}/results",
                    "description": "Path to output directory",
                    "hidden": true
                },
                "DATABASE_DIR": {
                    "type": "string",
                    "format": "path",
                    "description": "Path to AlphaFold database",
                    "default": "/mnt/storage/alphafold",
                    "hidden": true
                },
                "ALPHAFOLD_VERSION": {
                    "type": "string",
                    "description": "AlphaFold version identifier v(major)(minor)(patch)",
                    "default": "v300",
                    "enum": [
                        "v300",
                        "v232"
                    ]
                },
                "MODEL_PRESET": {
                    "type": "string",
                    "description": "AlphaFold model preset (AlphaFold2 only)",
                    "default": "multimer",
                    "enum": [
                        "multimer",
                        "monomer_ptm",
                        "monomer",
                        "monomer_casp14"
                    ]
                },
                "MODEL_DIR": {
                    "type": "string",
                    "format": "path",
                    "description": "Path to model weights (AlphaFold3 only)",
                    "default": "/mnt/storage/alphafold/v300/.model",
                    "hidden": true
                },
                "PREDICTIONS_PER_MODEL": {
                    "type": "integer",
                    "description": "Number of multimer predictions per model (AlphaFold2 only)",
                    "default": 1
                },
                "EMAIL": {
                    "type": "string",
		            "format": "email",
                    "description": "Email address for notifications",
                    "default": "huether@imb-mainz.de",
                    "hidden": true
                },
                "PORT": {
                    "type": "integer",
                    "description": "HTTP port to run shiny application on",
                    "default": 9988,
                    "hidden": true
                }
            }
        },
        "alphafold_options": {
            "type": "object",
            "properties": {
                "title": "INFERENCE",
                "type": "object",
                "description": "Parameter options for AlphaFold.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable INFERENCE process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "msa_options": {
            "type": "object",
            "properties": {
                "title": "MSA",
                "type": "object",
                "description": "Parameter options for multiple sequence alignment.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable MSA process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "metrics_options": {
            "type": "object",
            "properties": {
                "title": "METRICS",
                "type": "object",
                "description": "Parameter options for model metrics.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable METRICS process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        },
        "shiny_options": {
            "type": "object",
            "properties": {
                "title": "SHINY",
                "type": "object",
                "description": "Parameter options for shiny app.",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Enable SHINY process",
                        "default": true,
                        "hidden": true
                    }
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/defs/pipeline_options"
        }
    ]
}
