{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://gitlab.rlp.net/imbforge/fold2go/-/raw/main/nextflow_schema.json",
    "title": "fold2go",
    "description": "Configure pipeline parameters",
    "type": "object",
    "$defs": {
        "pipeline_options": {
            "title": "Pipeline options",
            "type": "object",
            "description": "Define fold2go pipeline parameters.",
            "properties": {
                "IN": {
                    "type": "string",
                    "format": "path",
                    "pattern": ".(json|fasta|fa)$",
                    "description": "Path to input fasta [AlphaFold2] or json [AlphaFold3] file(s)",
                    "default": "/fsimb/common/cicd/test-data/alphafold/chains/*.json"
                },
                "OUT": {
                    "type": "string",
                    "format": "path",
                    "default": "${launchDir}/results",
                    "description": "Path to output directory",
                    "hidden": true
                },
                "EMAIL": {
                    "type": "string",
		            "format": "email",
                    "description": "Email address for notifications",
                    "default": "",
                    "hidden": true
                },
                "PORT": {
                    "type": "integer",
                    "description": "HTTP port to run shiny application on. Set to 0 to use random port.",
                    "default": 0,
                    "hidden": true
                }
            }
        },
        "AlphaFold2": {
            "type": "object",
            "properties": {
                "ALPHAFOLD2" : {
                    "type": "object",
                    "description": "Parameter options for AlphaFold2",
                    "properties": {
                        "DATABASE_DIR": {
                            "type": "string",
                            "format": "path",
                            "description": "Path to AlphaFold2 database",
                            "default": "/mnt/storage/alphafold/v232",
                            "hidden": true
                        },
                        "MODEL_PRESET": {
                            "type": "string",
                            "description": "AlphaFold2 model preset",
                            "default": "multimer",
                            "enum": [
                                "multimer",
                                "monomer_ptm",
                                "monomer",
                                "monomer_casp14"
                            ]
                        },
                        "PREDICTIONS_PER_MODEL": {
                            "type": "integer",
                            "description": "Number of multimer predictions per AlphaFold2 model",
                            "default": 1
                        }
                    }
                }
            }
        },
        "AlphaFold3": {
            "type": "object",
            "properties": {
                "ALPHAFOLD3": {
                    "type": "object",
                    "description": "Parameter options for AlphaFold3.",
                    "properties": {
                        "DATABASE_DIR": {
                            "type": "string",
                            "format": "path",
                            "description": "Path to AlphaFold3 database",
                            "default": "/mnt/storage/alphafold/v300",
                            "hidden": true
                        },
                        "MODEL_DIR": {
                            "type": "string",
                            "format": "path",
                            "description": "Path to AlphaFold3 model weights",
                            "default": "/mnt/storage/alphafold/v300/.model",
                            "hidden": true
                        },
                        "GROUP_MSA": {
                            "type": "boolean",
                            "description": "Run multiple sequence alignments in a single job. This avoids redundant computation if sequences are shared between inputs.",
                            "default": true,
                            "hidden": true
                        }
                    }
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/pipeline_options"
        },
        {
            "$ref": "#/$defs/alphafold2_options"
        },
        {
            "$ref": "#/$defs/alphafold3_options"
        }
    ]
}
